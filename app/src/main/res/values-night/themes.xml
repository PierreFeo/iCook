<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Icook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyAppIcook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_700</item>
        <!-- Customize your theme here. -->
        <item name="iconTint">@color/white</item>
    </style>


    <style name="Theme.MyNavigationBar" parent="Widget.Design.BottomNavigationView">
        <!-- Primary brand color. -->
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemIconTint">@color/play_media_icon</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="Widget.AppTheme.MyChips" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/my_chips_colors_night</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/my_chips_colors_text_night</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.MyTextEditStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeColor">@color/edit_text_selector_night</item>
        <item name="hintTextColor">@color/edit_text_selector_night</item>
    </style>


    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.MyTextEditStyleCategory" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeColor">@color/edit_text_selector_night</item>
        <item name="hintTextColor">@color/edit_text_selector_night</item>
        <item name="endIconTint">@color/edit_text_selector_night</item>

    </style>


</resources>