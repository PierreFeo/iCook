<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Icook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_700</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.MyAppIcook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_700</item>
        <!-- Customize your theme here. -->
        <item name="iconTint">@color/white</item>

    </style>


    <style name="Theme.MyNavigationBar" parent="Widget.Design.BottomNavigationView">
        <!-- Primary brand color. -->
        <item name="labelVisibilityMode">unlabeled</item>

        <item name="itemIconSize">32dp</item>
        <item name="itemIconTint">@color/my_buttom_selector_basic</item>
<!--        <item name="android:minHeight">46dp</item>-->

    </style>


    <style name="Widget.AppTheme.MyButton" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">@dimen/common_spacing_8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/my_color_basic_dark_gray_day</item>
        <item name="elevation">10dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:maxWidth">@dimen/mtrl_btn_max_width</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

    </style>

    <style name="Widget.AppTheme.MyBookmarkButton" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">@dimen/common_spacing_8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="elevation">10dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:maxWidth">@dimen/mtrl_btn_max_width</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="Widget.AppTheme.MyText" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/my_color_basic_dark_gray_day</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="Widget.AppTheme.MyChips" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/my_chips_colors</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/my_chips_colors_text</item>

    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.MyTextEditStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeColor">@color/edit_text_selector</item>
        <item name="hintTextColor">@color/edit_text_selector</item>
    </style>


    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.MyTextEditStyleCategory" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeColor">@color/edit_text_selector</item>
        <item name="hintTextColor">@color/edit_text_selector</item>
        <item name="endIconTint">@color/edit_text_selector</item>
    </style>


</resources>